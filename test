        </div>
    </div>

    <!-- Main Application -->
    <div id="mainApp" class="main-container hidden">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="user-profile">
                <div class="user-avatar">üë§</div>
                <div class="user-name" id="userName">Pr√ºfer</div>
            </div>
            
            <button class="sidebar-btn" onclick="openStatistics()" title="Statistik">üìä</button>
            <button class="sidebar-btn" onclick="toggleLanguage()" title="Sprache" id="languageBtn">üá©üá™</button>
            <button class="sidebar-btn" onclick="togglePause()" title="Pause">‚è∏Ô∏è</button>
            
            <button class="undo-btn" onclick="goBack()" title="Zur√ºck">‚Ü∂</button>
        </div>

        <!-- Content Area -->
        <div class="content" id="contentArea"></div>
    </div>

    <!-- Pause Screen -->
    <div id="pauseScreen" class="pause-screen hidden">
